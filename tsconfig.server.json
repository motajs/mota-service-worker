{
  "compilerOptions": {
    "target": "ES2018",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "ESNext.Promise"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "strict": true,
  
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/vite-env.d.ts", "src/idl", "src/server"],
}
